{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.pug",
      "options": {
        "pugSortAttributes": "asc",
        "pugWrapAttributesThreshold": 1,
        "pugWrapAttributesPattern": "2"
      }
    }
  ]
}