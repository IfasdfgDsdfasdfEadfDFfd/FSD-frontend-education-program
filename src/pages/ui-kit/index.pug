extends ../common.pug

block title
  | UI-KIT

block body
  // cards
  include ../../components/cards/search-room/search-room.pug
  include ../../components/cards/account-registration/account-registration.pug
  include ../../components/cards/book-a-room/book-a-room.pug
  include ../../components/cards/login/login.pug
  include ../../components/calendar/calendar.pug
  include ../../components/room-item/room-item.pug


  .container.toolbox
    .colors-type
      .colors-type__colors
        .colors-type__colors__item
          .color-example.color-example--dark-shade-100
          .color-desc
            h2= 'Dark Shader 100%'
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example--dark-shade-75
          .color-desc
            h2= 'Dark Shader 75%'
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example--dark-shade-50
          .color-desc
            h2= 'Dark Shader 50%'
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example--dark-shade-25
          .color-desc
            h2= 'Dark Shader 25%'
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example--dark-shade-5
          .color-desc
            h2= 'Dark Shader 5%'
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example--purple
          .color-desc
            h2= 'Purple'
            | #BC9CFF
        .colors-type__colors__item
          .color-example.color-example--green
          .color-desc
            h2= 'Green'
            | #6FCF87
      .colors-type__text-types
        .colors-type__text-types__item
          h1
            | This one is the sub-section or
            br
            | widget title
            span= 'H1'
        .colors-type__text-types__item
          h2
            | Next one is the item title inside
            br
            | widgets
            span= 'H2'
        .colors-type__text-types__item
          h3
            | This is a label or cta text
            span= 'H3'
        .colors-type__text-types__item
          | This is the body text which is used for most
          br
          | of the design, like paragraphs, lists, etc.
          span= 'Body'
    .form-elements
    .cards.toolbox
      +search-room-card()
      +account-registration-card()
      +book-a-room-card()
      +login-card()
      +calendar()
      +room-item({
        bgi: "/static/room_888.png",
        number: "888",
        luxury: true,
        cost: "9 990",
        stars: 5,
        review: 145
      })
      +room-item({
        bgi: "/static/room_840.png",
        number: "840",
        luxury: false,
        cost: "9 900",
        stars: 4,
        review: 65
      })
    .headers-footers
