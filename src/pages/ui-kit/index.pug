extends ../common.pug

block head
  meta(
    name="description"
    content="UI KIT for toxin hotel booking website"
  )

block title
  | UI-KIT

block body
  // components
  include ../../components/element-wrapper/element-wrapper.pug
  include ../../components/text-field/text-field.pug
  include ../../components/dropdown/dropdown.pug
  include ../../components/checkbox/checkbox.pug
  include ../../components/radio-button/radio-button.pug
  include ../../components/toggle/toggle.pug
  include ../../components/like-button/like-button.pug
  include ../../components/rate-button/rate-button.pug
  include ../../components/range-slider/range-slider.pug
  include ../../components/button/button.pug
  include ../../components/pagination/pagination.pug
  include ../../components/subscription-form/subscription-form.pug
  include ../../components/counter/counter.pug
  include ../../components/dropdown-counter/dropdown-counter.pug
  include ../../components/date-dropdown/date-dropdown.pug
  include ../../components/filter-date-dropdown/filter-date-dropdown.pug
  include ../../components/expandable-checkbox-list/expandable-checkbox-list.pug
  include ../../components/bullet-list/bullet-list.pug
  include ../../components/top-feature/top-feature.pug
  include ../../components/comment/comment.pug

  // cards
  include ../../components/search-room-card/search-room-card.pug
  include ../../components/account-registration-card/account-registration-card.pug
  include ../../components/book-a-room-card/book-a-room-card.pug
  include ../../components/login-card/login-card.pug
  include ../../components/room-item/room-item.pug

  // header & footers
  include ../../components/header/header.pug
  include ../../components/footer/footer.pug

  .container.toolbox
    .colors-type
      .colors-type__colors
        .colors-type__colors__item
          .color-example.color-example_dark-shade-100
          .color-desc
            h2= "Dark Shader 100%"
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example_dark-shade-75
          .color-desc
            h2= "Dark Shader 75%"
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example_dark-shade-50
          .color-desc
            h2= "Dark Shader 50%"
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example_dark-shade-25
          .color-desc
            h2= "Dark Shader 25%"
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example_dark-shade-5
          .color-desc
            h2= "Dark Shader 5%"
            | #1F2041
        .colors-type__colors__item
          .color-example.color-example_purple
          .color-desc
            h2= "Purple"
            | #BC9CFF
        .colors-type__colors__item
          .color-example.color-example_green
          .color-desc
            h2= "Green"
            | #6FCF87
      .colors-type__text-types
        .text-example
          h1
            | This one is the sub-section or
            br
            | widget title
            span.text-example__label= "H1"
        .text-example
          h2
            pre
              | Next one is the item title inside
              | widgets
            span.text-example__label= "H2"
        .text-example
          h3
            | This is a label or cta text
            span.text-example__label= "H3"
        .text-example
          pre
            | This is the body text which is used for most
            | of the design, like paragraphs, lists, etc.
            span.text-example__label= "Body"

  .toolbox.container.form-elements
    .form-elements__container
      .form-elements__text-fields
        +element-wrapper({ label: 'text field', sub_label: 'DEFAULT' })
          +text-field({type: 'email', placeholder: 'Email'})
        +element-wrapper({ label: 'text field', sub_label: 'HOVER / FOCUS' })
          +focused-text-field({type: 'text', placeholder: 'some text', value: 'This is pretty awesome'})
        +element-wrapper({ label: 'dropdown', })
          +dropdown-counter({
            id: 'guests-counter-1',
            placeholder: 'Сколько гостей',
            counters: [
              {name: 'взрослые', value: 0},
              {name: 'дети', value: 0},
              {name: 'младенцы', value: 0}
            ],
            counting_way: 'sum',
            declensions: {singular: 'гость', genitive: 'гостя', plural: 'гостей'},
            opened: false, with_action_buttons: true,
          })
        +element-wrapper({ label: 'masked text field', })
          +masked-text-field('ui-kit-masked-text-field-id')
        +date-dropdown('date dropdown', 'date dropdown')
      +element-wrapper({ label: 'filter date dropdown', })
        +filter-date-dropdown()
      +element-wrapper({ label: 'subscription text field', })
        +subscription-form

    .form-elements__container
      +element-wrapper({ label: 'checkbox buttons', extra_spacing: true, })
        .form-elements__checkbox-group
          +checkbox-list([
            {
              name: 'allow-smoking',
              value: 'allow-smoking',
              label: 'Можно курить'
            },
            {
              name: 'allow-pets',
              value: 'allow-pets',
              label: 'Можно с питомцами',
              checked: true,
            },
            {
              name: 'allow-guests',
              value: 'allow-guests',
              label: 'Можно пригласить гостей (до 10 человек)',
              checked: true,
            },
          ])
      +element-wrapper({ label: 'radio buttons', extra_spacing: true, })
        +radio-buttons-group('gender', [{value: 'Мужчина', checked: true}, {value: 'Женщина', checked: false}])
      +element-wrapper({ label: 'toggle', extra_spacing: true, })
        .form-elements__toggle-group
          +toggle({
            name: 'special-offers-toggle_1',
            value: 'receive-special-offers',
            checked: true,
          })
            | Получать спецпредложения
          +toggle({
            name: 'special-offers-toggle_2',
            value: 'receive-special-offers',
          })
            | Получать спецпредложения
      +element-wrapper({ label: 'like button', extra_spacing: true, inline: true, })
        +like-button({name: 'like-1', liked: false, count: '2'})
        +like-button({name: 'like-2', liked: true, count: '12'})
      +element-wrapper({ label: 'rate button', extra_spacing: true, inline: true, })
        +rate-button('ui-kit-rate-buttons-1', 4)
        +rate-button('ui-kit-rate-buttons-2', 5)

    .form-elements__container
      +element-wrapper
        +range-slider({
          label: 'range slider',
          name: 'cost-range-slider',
          opts: {
            min: 0, max: 15000, step: 100, left: 5000, right: 10000,
          }
        })
      +element-wrapper({ label: 'buttons', extra_spacing: true, })
        .form-elements__buttons
          .form-elements__buttons__row
            +button({})
              | Click me
            +button({disabled: true})
              | Click me
          .form-elements__buttons__row
            +button({theme: 'bordered'})
              | Click me
            +button({theme: 'bordered', disabled: true})
              | Click me
          .form-elements__buttons__row
            +button({theme: 'flat'})
              | Click me
            +button({theme: 'flat', disabled: true})
              | Click me
          .form-elements__buttons__row
            +button({type: 'action'})
              | Перейти к оплате
      +element-wrapper({ label: 'pagination', extra_spacing: true, })
        +pagination('1 - 12 из 100+ вариантов аренды')

    .form-elements__container.form-elements__container_narrow
      +element-wrapper({ label: 'dropdown', sub_label: 'DEFAULT', })
        +dropdown-counter({
          id: 'room-properties-1', placeholder: 'Параметры номера',
          counters: [
            {name: 'спальни', value: 2},
            {name: 'кровати', value: 2},
            {name: 'ванные комнаты', value: 1}
          ], counting_way: 'apart', declensions: [
            {singular: 'спальня', genitive: 'спальни', plural: 'спален'},
            {singular: 'кровать', genitive: 'кровати', plural: 'кроватей'},
            {singular: 'ванная комната', genitive: 'ванные комнаты', plural: 'ванных комнат'},
          ], opened: false, with_action_buttons: false
        })
      +element-wrapper({ label: 'dropdown', sub_label: 'EXPANDED', })
        +dropdown-counter({ id: 'room-properties-2', placeholder: 'Параметры номера',
          counters: [
            {name: 'спальни', value: 2},
            {name: 'кровати', value: 2},
            {name: 'ванные комнаты', value: 0}
          ], counting_way: 'apart', declensions: [
            {'singular': 'спальня', 'genitive': 'спальни', 'plural': 'спален'},
            {'singular': 'кровать', 'genitive': 'кровати', 'plural': 'кроватей'},
            {'singular': 'ванная комната', 'genitive': 'ванные комнаты', 'plural': 'ванных комнат'},
          ], opened: true, with_action_buttons: false
        })

    .form-elements__container
      +element-wrapper({ label: 'dropdown', })
        +dropdown-counter({ id: 'guests-counter-2', placeholder: 'Сколько гостей',
          counters: [
            {name: 'взрослые', value: 0},
            {name: 'дети', value: 0},
            {name: 'младенцы', value: 0}
          ], counting_way: 'sum', declensions: {'singular': 'гость', 'genitive': 'гостя', 'plural': 'гостей'},
          opened: true, with_action_buttons: true
        })
    .form-elements__container
      +element-wrapper({ label: 'dropdown', })
        +dropdown-counter({ id: 'guests-counter-3', placeholder: 'Сколько гостей',
          counters: [
            {name: 'взрослые', value: 2},
            {name: 'дети', value: 1},
            {name: 'младенцы', value: 0}
          ], counting_way: 'sum', declensions: {'singular': 'гость', 'genitive': 'гостя', 'plural': 'гостей'},
          opened: true, with_action_buttons: true
        })

    .form-elements__container.form-elements__container_narrow
      +expandable-checkbox-list({
        title: 'expandable checkbox list',
        checkboxes: [
          { label: 'Завтрак', name: 'breakfast-0', value: 'has-breakfast', },
          { label: 'Письменный стол', name: 'desk-0', value: 'has-desk', checked: true, },
          { label: 'стул для кормления', name: 'feeding-chair-0', value: 'has-feeding-chair', checked: true, },
          { label: 'кроватка', name: 'crib-0', value: 'has-crib', checked: true, },
          { label: 'телевизор', name: 'tv-0', value: 'has-tv', },
          { label: 'шампунь', name: 'shampoo-0', value: 'has-shampoo', },
        ],
      })
      +expandable-checkbox-list({
        title: 'expandable checkbox list',
        checkboxes: [
          { label: 'Завтрак', name: 'breakfast', value: 'has-breakfast', },
          { label: 'Письменный стол', name: 'desk', value: 'has-desk', checked: true, },
          { label: 'стул для кормления', name: 'feeding-chair', value: 'has-feeding-chair', checked: true, },
          { label: 'кроватка', name: 'crib', value: 'has-crib', checked: true, },
          { label: 'телевизор', name: 'tv', value: 'has-tv', },
          { label: 'шампунь', name: 'shampoo', value: 'has-shampoo', },
        ],
        opened: true
      })

    .form-elements__container
      +element-wrapper({ label: 'rich checkbox buttons', extra_spacing: true })
        .form-elements__rich-checkbox-group
          +checkbox-list([
            {
              name: 'wide-corridor',
              value: 'wide-corridor',
              label: 'Широкий коридор',
              desc: 'Ширина коридоров в номере не менее 91 см.'
            },
            {
              name: 'assistant-for-disabled',
              value: 'assistant-for-disabled',
              label: 'Помощник для инвалидов',
              desc: 'На 1 этаже вас встретит специалист и проводит до номера'
            },
          ])

    .form-elements__container
      +element-wrapper({ label: 'bullet list', extra_spacing: true })
        +bullet-list([
          'Нельзя с питомцами',
          'Без вечеринок и мероприятий',
          'Время прибытия — после 13:00, а выезд до 12:00'
        ])

    +element-wrapper
      +top-feature({ icon: 'insert_emoticon', title: 'Комфорт', desc: 'Шумопоглощающие стены' })
      +top-feature({ icon: 'location_city', title: 'Удобство', desc: 'Окно в каждой из спален' })

    .form-elements__comment-container
      +comment({
        avatar_path: asset_path + '/comment_avatar_1.webp',
        username: 'Мурад Сарафанов',
        date: '5 дней назад',
        like_attrs: {name: 'comment-like', liked: true, like_count: '12'}
      })
        | Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий.
        | И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару - никто
        | не жаловался из соседей.

  .container.toolbox.toolbox_gray.cards
    +search-room-card
    +account-registration-card
    +book-a-room-card
    +login-card
    .cards__calendar.js-ui-kit-cards-calendar
      +calendar
    +room-item({ bgi: asset_path + "/room_888.webp", number: "888", luxury: true, cost: "9 990", stars: 5, review: 145, alt: "" })
    +room-item({ bgi: asset_path + "/room_840.webp", number: "840", luxury: false, cost: "9 900", stars: 4, review: 65, alt: "" })

  .toolbox.toolbox_gray.headers-footers
    +header(false)
    +header(true)
    +footer-desktop
    +footer-mobile
