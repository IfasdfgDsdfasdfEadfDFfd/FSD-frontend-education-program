include ../like-button/like-button.pug

mixin comment(avatar_path, username, date)
  .comment
    .comment__header
      image(src=avatar_path)
      .comment__header-title
        .comment__header-username= username
        .comment__header-date= date
    .comment__body
      +like-button('like-3')
      .comment__body-text
        block
