include ../../element-wrapper/element-wrapper.pug
include ../../date-dropdown/date-dropdown.pug
include ../../dropdown-counter/dropdown-counter.pug
include ../../buttons/action-button.pug

mixin search-room-card()
  .card.search-room
    h1.search-room__title
      | Найдем номер под
      br
      | ваши пожелания
    +date-dropdown(
      {label: 'Прибытие', placeholder: '19.08.2019'},
      {label: 'Убытие', placeholder: '23.08.2019'},
    )
    +element-wrapper({
      label: 'гости',
      sub_label: '',
      inline: false,
      extra_spacing: false,
      large_label: false,
    })
      +dropdown-counter({
        id: 'search-room-guests-counter',
        placeholder: 'Сколько гостей',
        counters: [{name: 'взрослые', value: 0}, {name: 'дети', value: 0}, {name: 'младенцы', value: 0}],
        counting_way: 'sum',
        declensions: {'singular': 'гость', 'genitive': 'гостя', 'plural': 'гостей'},
        opened: true,
        need_to_be_applied: true
      })
    +action-button('Подобрать номер')
