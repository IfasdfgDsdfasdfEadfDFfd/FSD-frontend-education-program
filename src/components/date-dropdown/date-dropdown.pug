include ../dropdown/dropdown.pug
include ../element-wrapper/element-wrapper.pug
include ../calendar/calendar.pug

mixin date-dropdown(left, right)
  .dropdown-container
    +element-wrapper({
      label: '',
      sub_label: '',
      inline: true,
      extra_spacing: false,
      large_label: false,
    })
      +element-wrapper({
        label: left.label,
        sub_label: '',
        inline: false,
        extra_spacing: false,
        large_label: false,
      })
        .date-dropdown.dropdown-container
          +dropdown(left.placeholder, false)
      +element-wrapper({
        label: right.label,
        sub_label: '',
        inline: false,
        extra_spacing: false,
        large_label: false,
      })
        .date-dropdown
          +dropdown(right.placeholder, false)
    .dropdown-container__body
      +calendar('Август', '2019')
