mixin range-slider(label, name, opts)
  .range-slider__container
    - var id = name + "-id";
    .range-slider__title
      h3
        label= label
      span(id="display-for-" + id)
    .range-slider.js-range-slider(id=id)
      input.range-slider__element.range-slider__element-left(
        max=opts.max,
        min=opts.min,
        step=opts.step,
        type='range',
        value=opts.left
      )
      input.range-slider__element.range-slider__element-right(
        max=opts.max,
        min=opts.min,
        step=opts.step,
        type='range',
        value=opts.right
      )

      .slider
        .slider__track
        .slider__range
        .slider__thumb.slider__thumb_left
        .slider__thumb.slider__thumb_right

    block
