mixin dropdown({text, buttonTheme, textTheme})
  -
    const buttonThemeModifiers = {
      bordered: 'dropdown__button_bordered',
    };

    const textThemeModifiers = {
      bold: 'dropdown__button__text_bold',
      nowrap: 'dropdown__button__text_nowrap',
    };

    const buttonClass = [buttonThemeModifiers[buttonTheme]];
    const textClass = [textThemeModifiers[textTheme]];

  .dropdown.js-dropdown
    button.dropdown__button.js-dropdown__button(class=buttonClass)
      span.dropdown__button__text(class=textClass)= text
      span.dropdown__button__arrow= "expand_more"
    .dropdown__body
      block
