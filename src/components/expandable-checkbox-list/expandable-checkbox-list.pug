include ../checkbox/checkbox.pug

mixin expandable-checkbox-list(title, checkboxes, closed)
  - var closed_class = closed ? "expandable-checkbox-list_closed" : "";
  div.expandable-checkbox-list(class=closed_class)
    button.expandable-checkbox-list__btn= title
    ul
      each checkbox in checkboxes
        li.expandable-checkbox-list__item
          +checkbox(checkbox.name, checkbox.value, checkbox.checked)
            | #{checkbox.text}
